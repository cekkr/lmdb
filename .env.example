# DB-SLM configuration template.
# Copy this file to `.env` and customise the values for your environment.

# SQLite remains the canonical backend for local experimentation.
DBSLM_BACKEND=sqlite
DBSLM_SQLITE_PATH=var/db_slm.sqlite3

# Emotion-rich dataset used for bootstrapping the statistical tables.
DBSLM_DATASET_PATH=datasets/emotion_data.json

# Where flagged evaluation samples are stored for targeted retraining.
DBSLM_QUALITY_QUEUE_PATH=var/eval_logs/quality_retrain_queue.jsonl

# Controls for the external embedding model used during sentence segmentation.
DBSLM_EMBEDDER_MODEL=all-MiniLM-L6-v2

# SQLite memory guardrails (flush cold contexts into MariaDB once exceeded).
DBSLM_SQLITE_FLUSH_THRESHOLD_MB=1024
DBSLM_SQLITE_FLUSH_BATCH=500
DBSLM_SQLITE_FLUSH_COLD_THRESHOLD=2

# Target MariaDB deployment parameters (not consumed until the migration step).
DBSLM_MARIADB_HOST=127.0.0.1
DBSLM_MARIADB_PORT=3306
DBSLM_MARIADB_USER=dbslm
DBSLM_MARIADB_PASSWORD=change-me
DBSLM_MARIADB_DATABASE=db_slm
